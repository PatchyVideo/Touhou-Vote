@import url('https://fonts.loli.net/css?family=Quicksand');

a {
  @apply cursor-pointer text-accent-color-300 hover:text-accent-color-600 transition transition-colors;
}

button {
  @apply text-white bg-accent-color-600 rounded shadow opacity-90;
  @apply transition transition-all hover:opacity-100 hover:bg-accent-color-700;
}

.buttonDisabled {
  @apply bg-accent-color-300 cursor-not-allowed opacity-60;
  @apply hover:opacity-60 hover:bg-accent-color-300;
}

strong {
  @apply text-accent-color-300;
}

input,
textarea {
  @apply bg-transparent;
}

.innerBox {
  @apply bg-accent-color-100 bg-opacity-10 shadow-inner rounded-xl;
}

.baseBox,
.baseBoxRounded,
.baseBoxShadow,
.baseBoxRoundedShadow {
  @apply bg-subaccent bg-opacity-90;
}
.baseBoxRounded,
.baseBoxRoundedShadow {
  @apply rounded-xl;
}
.baseBoxShadow,
.baseBoxRoundedShadow {
  @apply shadow;
}

* {
  @apply text-textaccent;
}

/* Scrollbar */
*::-webkit-scrollbar {
  width: 16px;
}
*::-webkit-scrollbar-thumb {
  height: 56px;
  background-clip: content-box;
  background-color: theme('colors.gray.500');
  border: 4px solid transparent;
  border-radius: 9999px;
}
*::-webkit-scrollbar-thumb:hover {
  background-color: theme('colors.gray.400');
}

.quicksand {
  font-family: 'Quicksand';
}

.input-border,
.linkbox-border {
  box-shadow: inset 0 0 0 2px theme('colors.gray.200');
  position: relative;
  vertical-align: middle;
  @apply rounded-xl;
  &::before,
  &::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    transform-origin: center;
    transition: transform 5ms;
    @apply rounded-xl border-accent-color-300;
  }
  &::before {
    transform: scale3d(0, 1, 1);
    @apply border-t-2 border-b-2;
  }
  &::after {
    transform: scale3d(1, 0, 1);
    @apply border-l-2 border-r-2;
  }
}
.input-border:focus-within,
.linkbox-border:hover {
  &::before,
  &::after {
    transform: scale3d(1, 1, 1);
  }
}
.input-border-md,
.linkbox-border-md {
  @apply rounded;

  &::before,
  &::after {
    @apply rounded;
  }
}

.float-arrow-box {
  .float-arrow {
    @apply transform transition-transform duration-200 ease-out;
  }
}
.float-arrow-box:hover {
  .float-arrow {
    @apply translate-x-1/4;
  }
}

.ani-link {
  position: relative;
  &::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: 1px;
    z-index: -1;
    background-color: theme('colors.accent-color.600');
    transition: all 200ms cubic-bezier(0.2, 0, 0, 1);
    transform-origin: bottom center;
    @apply rounded-md;
  }
}
.ani-link:hover {
  &::after {
    top: 0;
    height: 100%;
    background-color: theme('colors.accent-color.200');
  }
}

/* Background */
.page {
  @apply fixed inset-0 -z-1 bg-no-repeat bg-cover bg-center;
  background-image: url('https://asset.lilywhite.cc/thvote/imgs/vote/bg/v11.jpg');
}

@variants <md {
  .page {
    box-shadow: inset 3em 3em 20em 6em rgba(0, 0, 0, 0.3), inset -3em -3em 20em 6em rgba(0, 0, 0, 0.3);
  }
}
@variants md {
  .page {
    box-shadow: inset 3em 3em 20em 6em rgba(0, 0, 0, 0.4), inset -3em -3em 20em 6em rgba(0, 0, 0, 0.4);
  }
}

/* Bounce  */
.bounce-home {
  animation: bounce 1s ease-in-out 0s 1;
}
@keyframes bounce {
  0%,
  100% {
    transform: translateY(0);
    animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
  }
  50% {
    transform: translateY(-5%);
    animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
  }
}
