{
  "include": ["packages"],
  "exclude": ["**/__tests__"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "types": ["vite/client"],
    "jsx": "preserve",
    "target": "ESNext",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/*"],
      "@@/*": ["./*"]
    }
  }
}
